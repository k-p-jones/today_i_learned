<div class='container mx-auto shadow-xl p-4 md:p-10 bg-white rounded-md mb-10'>
  <% @posts.each do |post| %>
    <div>
      <h2 class="text-gray-700 text-xl md:text-3xl pt-4">
        <%= post.title %>
      </h2>
      <p class='text-gray-500 text-sm'>
        Posted on <%= post.formatted_date %>
      </p>
      <%=
        link_to 'View', post_path(post.id),
        class: 'text-green-500 hover:text-green-800 font-bold text-md md:text-lg'
      %>
    </div>
  <% end %>
</div>
